<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.web.WebView?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import com.dakusuta.tools.anime.custom.CustomTableColumn?>

<AnchorPane
	fx:controller="com.dakusuta.tools.anime.MainFXMLController"
	xmlns:fx="http://javafx.com/fxml">
	<padding>
		<Insets top="10" right="10" bottom="10" left="10" />
	</padding>

	<HBox spacing="10" AnchorPane.topAnchor="0.0"
		AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">

		<Button fx:id="previous" text="Previous" disable="true"
			onAction="#previous" prefWidth="80" />

		<Button fx:id="next" text="Next" disable="true"
			onAction="#next" prefWidth="80" />

		<Button fx:id="download" text="Download" disable="true"
			onAction="#download" prefWidth="150" HBox.hgrow="ALWAYS" />

		<TextField fx:id="search" promptText="Enter Anime to search"
			onKeyTyped="#search" maxWidth="Infinity" HBox.hgrow="ALWAYS" />
	</HBox>

	<ScrollPane fx:id="scrollPane" styleClass="edge-to-edge"
		fitToHeight="true" fitToWidth="true" AnchorPane.topAnchor="35.0"
		AnchorPane.leftAnchor="10.0" AnchorPane.bottomAnchor="5.0">

		<VBox id="list" prefWidth="300" />
	</ScrollPane>

	<WebView fx:id="webView" AnchorPane.topAnchor="35.0"
		
		AnchorPane.leftAnchor="320.0" AnchorPane.rightAnchor="10.0"
		AnchorPane.bottomAnchor="250.0" />

	<Button fx:id="showEpisodes" text="Show Episodes" disable="true"
		onAction="#showEpisodes" AnchorPane.topAnchor="300.0"
		AnchorPane.leftAnchor="320.0" />

	<TableView fx:id="tableView" AnchorPane.topAnchor="330.0"
		AnchorPane.leftAnchor="320.0" AnchorPane.rightAnchor="10.0"
		AnchorPane.bottomAnchor="5.0" layoutX="6.0" layoutY="52.0">

		<placeholder>
			<Label text="No downloads in the list" />
		</placeholder>

		<columns>
			<CustomTableColumn editable="false" widthPercentage="0.15" sortable="true" fx:id="fileName"  text="File Name" />
			<CustomTableColumn editable="false" widthPercentage="0.20" sortable="false" fx:id="url" text="Url"  />
			<CustomTableColumn editable="false" widthPercentage="0.10" sortable="true" fx:id="size" text="Size" />
			<CustomTableColumn editable="false" widthPercentage="0.15" sortable="false" fx:id="downloaded" text="Downloaded" />
			<CustomTableColumn editable="false" widthPercentage="0.30" sortable="false" fx:id="progress" text="Progess"/>
			<CustomTableColumn editable="false" widthPercentage="0.10" sortable="true" fx:id="status" text="Status"/>
		</columns>
	</TableView>
</AnchorPane>