<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="root" alignment="CENTER" hgap="10" vgap="10"
	xmlns:fx="http://javafx.com/fxml/1"
	xmlns="http://javafx.com/javafx/11.0.1"
	fx:controller="com.codingotaku.apps.AboutController">
	<padding>
		<Insets bottom="25" left="25" right="25" top="25" />
	</padding>
	<children>
		<Label text="Author" GridPane.columnIndex="0"
			GridPane.rowIndex="0" />
		<Label text="CodingOtaku (Rahul S)" GridPane.columnIndex="1"
			GridPane.rowIndex="0" />
		<Label text="LICENSE" GridPane.columnIndex="0"
			GridPane.rowIndex="1" />
		<Label text="MIT" GridPane.columnIndex="1" GridPane.rowIndex="1" />
		<Label text="Source code" GridPane.columnIndex="0"
			GridPane.rowIndex="2" />
		<Hyperlink onAction="#openRepo" fx:id="repoLink"
			text="https://github.com/codingotaku/Animu-Downloaderu"
			GridPane.columnIndex="1" GridPane.rowIndex="2" />
		<Label text="Version" GridPane.columnIndex="0"
			GridPane.rowIndex="3" />
		<Label text="" GridPane.columnIndex="1" GridPane.rowIndex="3" />
		<Label text="Buy me a coffee!" GridPane.columnIndex="0"
			GridPane.rowIndex="4" />
		<Hyperlink onAction="#donate" text="Donate"
			GridPane.columnIndex="1" GridPane.rowIndex="4" />
	</children>
</GridPane>
